#include<stdio.h>
int main()
{
	int a,b,c;
	printf("Enter 3 numbers:");
	scanf("%d%d%d",&a,&b,&c);
	if(a>b && a>c)
	{
		printf("The greatest of the three numbers is %d",a);
	}
	else if(b>a && b>c)
	{
		printf("The greatest of the three numbers is %d",b);
	}
	else if(c>a && c>b)
	{
		printf("The greatest of the three numbers is %d",c);
	}
	return 0;
}
